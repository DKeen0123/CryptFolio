enum Permission {
	ADMIN
	USER
	CRYPTOCURRENCYCREATE
	CRYPTOCURRENCYUPDATE
	CRYPTOCURRENCYDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpiry: Float
	permissions: [Permission]
}

type CryptoCurrency {
	id: ID! @unique
	name: String!
	amount: Float
	user: User!
}
